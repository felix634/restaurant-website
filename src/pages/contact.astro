---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Your Restaurant Name - Contact Us">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-5xl md:text-6xl font-playfair font-bold text-center text-gray-100 mb-12">
      Contact Us
    </h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div class="bg-gray-900 p-8 rounded-lg shadow-xl">
        <h2 class="text-3xl font-playfair font-bold text-golden-spoon-accent mb-6">
          Get in Touch
        </h2>
        <p class="text-gray-300 mb-4">
          Have a question or want to make a reservation? Feel free to contact us using the information below or by filling out the form. We look forward to hearing from you!
        </p>
        <div class="space-y-4 text-gray-400">
          <p>
            <strong class="text-gray-100">Address:</strong> 123 Culinary Lane, Gastronomy City, GC 45678
          </p>
          <p>
            <strong class="text-gray-100">Phone:</strong> (123) 456-7890
          </p>
          <p>
            <strong class="text-gray-100">Email:</strong> contact@yourrestaurant.com
          </p>
        </div>
      </div>

      <div class="bg-gray-900 p-8 rounded-lg shadow-xl">
        <h2 class="text-3xl font-playfair font-bold text-golden-spoon-accent mb-6">
          Send Us a Message
        </h2>
        <form action="#" method="POST" class="space-y-6">
          <div>
            <label for="name" class="block text-gray-400 mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full p-3 bg-gray-800 border border-gray-700 rounded-md text-gray-200 focus:outline-none focus:ring-2 focus:ring-golden-spoon-accent"
              required
            />
          </div>
          <div>
            <label for="email" class="block text-gray-400 mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full p-3 bg-gray-800 border border-gray-700 rounded-md text-gray-200 focus:outline-none focus:ring-2 focus:ring-golden-spoon-accent"
              required
            />
          </div>
          <div>
            <label for="message" class="block text-gray-400 mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              class="w-full p-3 bg-gray-800 border border-gray-700 rounded-md text-gray-200 focus:outline-none focus:ring-2 focus:ring-golden-spoon-accent"
              required
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-golden-spoon-accent text-gray-950 font-bold py-3 px-6 rounded-md shadow-lg hover:bg-golden-spoon-accent-dark transition-colors duration-300"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>

    <section class="mt-16">
      <h2 class="text-3xl font-playfair font-bold text-center text-golden-spoon-accent mb-8">
        Find Us
      </h2>
      <div class="bg-gray-900 p-4 rounded-lg shadow-xl">
        <div class="relative w-full" style="padding-top: 56.25%;">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.257008107931!2d-73.9877481845942!3d40.74844037932791!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259695d820577%3A0xc4a38258b3e8e121!2sEmpire%20State%20Building!5e0!3m2!1sen!2sus!4v1614742491100!5m2!1sen!2sus"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            class="absolute top-0 left-0 w-full h-full rounded-lg"
          ></iframe>
        </div>
      </div>
    </section>
  </div>
</Layout>