---
interface Props {
  name: string;
  description: string;
  price: number;
}

const { name, description, price } = Astro.props;
---

<div class="rounded-lg bg-white p-6 shadow-md transition-transform duration-300 hover:scale-105">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <h3 class="text-xl font-bold text-gray-800">{name}</h3>
      <p class="mt-2 text-gray-600">{description}</p>
    </div>
    <div class="ml-4 flex-shrink-0">
      <p class="text-2xl font-bold text-green-600">${price.toFixed(2)}</p>
    </div>
  </div>
</div>